#mine{
  width: 100%;
  height: 100%;
  background: #f3f3f3;
}

/* 头部区域。 */
.header{
  width: 100%;
  height: 410rpx;
  background: #07c160;
  position: relative;
}

.van-notice-bar{
  height: 50rpx !important;
  line-height: 50rpx !important;
}

.image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: 30rpx;
  position: relative;
  left: 50%;
  margin-left: -60rpx;
}

.avatar-wrapper { /* 未登录前的按钮。 */
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar { /* 未登录前的头像图片。 */
  display: block;
  width: 56px;
  height: 56px;
}

/* 头部区域中三个标识。 */
.nav{
  width: 100%;
  display: flex;
  position: absolute;
  bottom: 30rpx;
}

.nav-item{
  flex: 1;
  text-align: center;
  color: #fff;
}

.nav-item-title{
  font-size: 26rpx;
  margin-top: 10rpx;
}

/* 中间和下面的单元格。 */
.group{
  margin-top: 20rpx;
}